{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["index.js", "index.mjs", "examples/**/*.js", "test/**/*.js"],
  "exclude": ["node_modules", "dist", "coverage"]
}
